<main>
    <div id="cart-container">
    <form action="/cart" method="POST">
        <h2 class="cart-h2">CUSTOMER DETIALS</h2>
        <div id="cart-form-div">
            <input type="text" name="userName" placeholder="Enter your name">
        <input type="text" name="userEmail" placeholder="Enter your email" value="{{this.userEmail}}">
        </div>
        {{#if this.isMember}}
        <div id="star-div"><img src="images/star.png" style="height:35px; width:35px"/><p class="cart-p">VERIFIED MEMBER</p></div>
        {{/if}}

        <h2 class="cart-h2">YOUR CLASSES</h2>
        {{#each cartList}}
        {{> cart-partial this}}
        {{/each}}
    </form>
    </div>
</main>